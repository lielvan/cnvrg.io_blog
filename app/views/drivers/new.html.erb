<h1>New Driver</h1>

<%= form_with scope: :driver, url: drivers_path, local: true do |form| %>
  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>

  <p>
    <%= form.label :email %><br>
    <%= form.email_field :email %>
  </p>

  <p>
    <%= form.label :date_of_birth %><br>
    <%= form.date_field :date_of_birth %>
  </p>

  <p>
    <%= form.label :driver_image %><br>
    <%= form.file_field :driver_image %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>

<%= link_to 'Back', cars_path %>
<div class="row text-center">
  <div class="col-4 ml-auto mr-auto">
    <h1 class="title">New Driver</h1>
  
    <%= form_with scope: :driver, url: drivers_path, local: true do |form| %>
      <div class="form-group">
        <%= form.label :name %><br>
        <%= form.text_field :name, class: "form-control", :required => true %>
      </div>
    
      <div class="form-group">
        <%= form.label :email %><br>
        <%= form.email_field :email, class: "form-control", :required => true %>
      </div>
    
      <div class="form-group">
        <%= form.label :date_of_birth, 'Date Of Birth' %><br>
        <%= form.date_field :date_of_birth, class: "form-control" %>
      </div>
    
      <div class="form-group">
        <%= form.label :driver_image, 'Driver Image' %><br>
        <%= form.file_field :driver_image, class: "form-control" %>
      </div>
    
      <%= form.submit class: "btn btn-primary mb-3" %>
    <% end %>

    <%= link_to 'Back', drivers_path, class: 'd-block mt-2' %>
  </div>
</div>
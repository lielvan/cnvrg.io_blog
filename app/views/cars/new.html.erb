<div class="row text-center">
  <div class="col-4 ml-auto mr-auto">
    <h1 class="title">New Car</h1>
    
    <%= form_with scope: :car, url: cars_path, local: true do |form| %>
      <div class="form-group">
        <%= form.label :title %><br>
        <%= form.text_field :title, class: "form-control" %>
      </div>
    
      <div class="form-group">
        <%= form.label :car_type, 'Type' %><br>
        <%= form.text_field :car_type, class: "form-control" %>
      </div>
    
      <div class="form-group">
        <%= form.label :color %><br>
        <%= form.select(:color, Car.colors.keys, { :prompt => "Select Color" }, { class: "form-control" }) %>
      </div>
    
      <div class="form-group">
        <%= form.label :driver_ids, 'Driver Name' %><br>
        <%= form.collection_check_boxes(:driver_ids, Driver.all, :id, :name, multiple: true) do |c| %>
          <%= c.label(:"data-value" => c.value, class: "form-check-label") do %>
            <%= c.check_box(class: "form-check-input") + c.text %>
          <% end %>
        <% end %>
      </div>
    
      <div class="form-group">
        <%= form.label :car_image, 'Car Image' %><br>
        <%= form.file_field :car_image, class: "form-control" %>
      </div>
    
      <%= form.submit class: "btn btn-primary mb-3" %>
    <% end %>
    
    <%= link_to 'Back', cars_path %>
  </div>
</div>
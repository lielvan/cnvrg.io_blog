<h1>New Car</h1>

<%= form_with scope: :car, url: cars_path, local: true do |form| %>
  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>

  <p>
    <%= form.label :car_type %><br>
    <%= form.text_field :car_type %>
  </p>

  <p>
    <%= form.label :color %><br>
    <%= form.select :color, Car.colors.keys %>
  </p>

  <p>
    <%= form.label :driver_ids %><br>
    <%= form.collection_check_boxes :driver_ids, Driver.all, :id, :name, multiple: true %>
  </p>

  <p>
    <%= form.label :car_image %><br>
    <%= form.file_field :car_image %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>

<%= link_to 'Back', cars_path %>
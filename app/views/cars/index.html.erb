<h1>Listing Cars</h1>

<%= link_to 'New Car', new_car_path %>

<table>
  <tr>
    <th>Title</th>
    <th>Type</th>
    <th>Color</th>
    <th>Drivers</th>
    <th></th>
  </tr>

  <% @cars.each do |car| %>
    <tr>
      <td><%= car.title %></td>
      <td><%= car.car_type %></td>
      <td><%= car.color %></td>
      <td><%= car.drivers.map {|d| d.name}.join(', ') %></td>
      <td><%= link_to 'Show', car_path(car) %></td>
    </tr>
  <% end %>
</table>

<br>

<%= link_to 'Drivers', controller: 'drivers' %>